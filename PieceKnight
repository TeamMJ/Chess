package Chess;

import java.io.File;
import javafx.scene.image.Image;
import javafx.scene.image.ImageView;

public class PieceKnight extends Pieces {

	public PieceKnight(int type) {
		super(type);
		
		if( type == 1){
			knight = new Image(new File("testBoard/images/black_knight.png").toString(), 87.5, 87.5, false, false);
			Knight = new ImageView(knight);
			getChildren().addAll(Knight);
		}
		
		else if( type == 2){
			knight = new Image(new File("testBoard/images/white_knight.png").toString(), 87.5, 87.5, false, false);
			Knight = new ImageView(knight);
			getChildren().addAll(Knight);
		}
	}
	
	public void move(){
		
	}
	
	public void capture(){
		
	}
	
	// overridden version of the relocate method
	@Override
	public void relocate(double x, double y) {
		// call the superclass method and update the position
		super.relocate(x, y);
	}
	
	//private fields
	private Image knight;
	private ImageView Knight;
	private int type;
}
