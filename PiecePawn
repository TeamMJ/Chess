package Chess;

import java.io.File;
import javafx.scene.image.Image;
import javafx.scene.image.ImageView;

public class PiecePawn extends Pieces {
	
	public PiecePawn(int type){
		super(type);
		
		if( type == 1){
			pawn = new Image(new File("testBoard/images/black_pawn.png").toString(), 87.5, 87.5, false, false);
			Pawn = new ImageView(pawn);
			getChildren().addAll(Pawn);
		}
		
		else if( type == 2){
			pawn = new Image(new File("testBoard/images/white_pawn.png").toString(), 87.5, 87.5, false, false);
			Pawn = new ImageView(pawn);
			getChildren().addAll(Pawn);
		}
	}
	
	public void move(){
		
	}
	
	public void capture(){
		
	}
	
	// overridden version of the relocate method
	@Override
	public void relocate(double x, double y) {
		// call the superclass method and update the position
		super.relocate(x, y);
	}
	
	//private fields
	private Image pawn;
	private ImageView Pawn;
	private int type;
}
