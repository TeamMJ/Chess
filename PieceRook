package Chess;

import java.io.File;
import javafx.scene.image.Image;
import javafx.scene.image.ImageView;

public class PieceRook extends Pieces{
	
	public PieceRook(int type) {
		super(type);
		
		if( type == 1){
			rook = new Image(new File("testBoard/images/black_rook.png").toString(), 87.5, 87.5, false, false);
			Rook = new ImageView(rook);
			getChildren().addAll(Rook);
		}
		
		else if( type == 2){
			rook = new Image(new File("testBoard/images/white_rook.png").toString(), 87.5, 87.5, false, false);
			Rook = new ImageView(rook);
			getChildren().addAll(Rook);
		}
	}
	
	public void move(){
		
	}
	
	public void capture(){
		
	}
	
	// overridden version of the relocate method
	@Override
	public void relocate(double x, double y) {
		// call the superclass method and update the position
		super.relocate(x, y);
	}
	
	//private fields
	private Image rook;
	private ImageView Rook;
	private int type;
}
