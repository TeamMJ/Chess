package Chess;

import java.io.File;
import javafx.scene.image.Image;
import javafx.scene.image.ImageView;

public class PieceRook extends Pieces{
	
	public PieceRook(int type) {
		super(type);
		
		if( type == 1){
			rook = new Image(new File("testBoard/images/black_rook.png").toString(), area, area, false, false);
			Rook = new ImageView(rook);
			getChildren().addAll(Rook);
		}
		
		else if( type == 2){
			rook = new Image(new File("testBoard/images/white_rook.png").toString(), area, area, false, false);
			Rook = new ImageView(rook);
			getChildren().addAll(Rook);
		}
	}
	
	public void move(int type, double x, double y, double x1, double y1){
		if(type == 1){
			//movement up & down, or left & right
			if(x > x1){
				//move down
				xx = x;
				yy = y1;
			}
			if(y < y1){
				//move up
				yy = y;
				xx = x1;
			}
			
			if(x < x1){
				//move down
				xx = x;
				yy = y1;
			}
			if(y > y1){
				//move
				yy = y;
				xx = x1;
			}
			else{}
			
			//set location
			x2 = xx;
			y2 = yy;
			relocate(yy, xx);
		}
		
		if(type == 2){
			//movement up & down, or left & right
			if(x < x1){
				//move down
				xx = x;
				yy = y1;
			}
			if(y > y1){
				//move up
				yy = y;
				xx = x1;
			}
			
			if(x > x1){
				//move down
				xx = x;
				yy = y1;
			}
			if(y < y1){
				//move
				yy = y;
				xx = x1;
			}
			else{}
			
			//set location
			x2 = yy;
			y2 = xx;
			relocate(xx, yy);
		}
		
	}
	
	public void capture(double x, double y){
		
	}
	
	public double newX(){
		return x2;
	}
	
	public double newY(){
		return y2;
	}
	
	// overridden version of the relocate method
	@Override
	public void relocate(double x, double y) {
		// call the superclass method and update the position
		super.relocate(x, y);
	}
	
	//private fields
	private Image rook;
	private ImageView Rook;
	private double area = 700/8;
	private double xx, yy;
	private double x2, y2;
}
